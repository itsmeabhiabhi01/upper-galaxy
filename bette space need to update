    <div class="main-content flex flex-col items-center w-full" id="main-content">
        <!-- Room Cards -->
        <div class="grid gap-6 w-full room-grid" id="room-grid">
            <!-- Room 1 -->
            <div class="room-card" data-language="english">
                <div class="flex justify-between items-center">
                    <div class="text-xl font-bold room-title">English</div>
                    <div><i class="fas fa-microphone text-yellow-500"></i></div>
                </div>
                <div class="people-row mt-3" id="english-people"></div>
                <div class="room-footer">
                    <i class="fas fa-share-alt share-icon"></i>
                    <button class="join-room" onclick="window.open('https://meet.jit.si/EnglishRoom', '_blank')">JOIN</button>
                </div>
            </div>
            <!-- Room 2 -->
            <div class="room-card" data-language="spanish">
                <div class="flex justify-between items-center">
